{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "build",
        "lib": [
			"es6",
			"dom"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true
    },
    "typeRoots": [
        "./types",
        "./node_modules/@types"
    ],
	"include": [
        "ext-src",
	],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
