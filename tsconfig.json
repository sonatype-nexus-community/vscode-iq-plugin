{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "es6",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "typings",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
	  "src/setupTests.ts",
    ".vscode-test",
    "src/**/*.test.tsx"
  ]
}
