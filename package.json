{
	"name": "vscode-iq-plugin",
	"displayName": "Sonatype Nexus IQ Extension for VSCode",
	"description": "Sonatype Nexus IQ Extension for VSCode",
	"version": "0.2.0",
	"author": {
		"name": "ctownshend"
	},
	"icon": "resources/SON_logo_favicon.png",
	"publisher": "cameronsonatype",
	"license": "SEE LICENSE IN LICENSE.txt",
	"repository": {
		"type": "git",
		"url": "https://github.com/sonatype-nexus-community/vscode-iq-plugin.git"
	},
	"homepage": "https://github.com/sonatype-nexus-community/vscode-iq-plugin/blob/master/README.md",
	"bugs": {
		"url": "https://github.com/sonatype-nexus-community/vscode-iq-plugin/issues",
		"email": "ctownshend@sonatype.com"
	},
	"keywords": [
		"Sonatype",
		"Nexus",
		"IQ",
		"Component",
		"Vulnerability"
	],
	"engines": {
		"vscode": "^1.23.0"
	},
	"activationEvents": [
		"onCommand:react-webview.start",
		"onView:nodeDependencies",
		"onView:nexusExplorer",
		"onView:testView",
		"onLanguage:json",
		"onLanguage:jsonc",
		"onCommand:sample.reveal"
	],
	"main": "./build/ext-src/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "nexusExplorer",
					"name": "Sonatype Nexus"
				}
			]
		},
		"commands": [
			{
				"command": "react-webview.start",
				"title": "Start React Webview",
				"category": "React"
			},
			{
				"command": "nexusExplorer.refresh",
				"title": "Nexus Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "nexusExplorer.refreshNode",
				"title": "Nexus Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "nexusExplorer.viewNode",
				"title": "View Details",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "nexusExplorer.refresh",
					"when": "view == nexusExplorer",
					"group": "navigation"
				}
			]
		},
		"configuration": [
			{
				"title": "Sonatype Explorer",
				"properties": {
					"nexusExplorer.autorefresh": {
						"type": "boolean",
						"default": false
					},
					"nexusExplorer.dataSource": {
						"type": "string",
						"default": "ossindex",
						"enum": ["ossindex", "iqServer"],
						"enumDescriptions": [
							"Use publicly available OSS Index data",
							"Use commercial Sonatype IQ Server data"
						]
					}
				}
			},
			{
				"type": "object",
				"title": "Sonatype Nexus IQ configuration",
				"properties": {
					"nexusiq.url": {
						"type": "string",
						"default": "http://127.0.0.1:8070",
						"description": "URL including port of the Nexus IQ server"
					},
					"nexusiq.username": {
						"type": "string",
						"default": "admin",
						"description": "Your Nexus IQ user name"
					},
					"nexusiq.password": {
						"type": "string",
						"default": "admin123",
						"description": "Your Nexus IQ password"
					},
					"nexusiq.applicationPublicId": {
						"type": "string",
						"default": "sandbox-application",
						"description": "Your Nexus IQ Application Public Id"
					},
					"nexusiq.maximumEvaluationPollAttempts": {
						"type": "number",
						"default": "300",
						"description": "Number of retries (every 2secs) to wait for the Evaluation report. "
					}
				}
			},
			{
				"type": "object",
				"title": "Sonatype OSS Index Configuration",
				"properties": {
					"ossindex.username": {
						"type": "string",
						"description": "Your OSS Index user name"
					},
					"ossindex.password": {
						"type": "string",
						"description": "Your OSS Index password"
					}
				}
			}

		]
	},
	"scripts": {
		"vscode:prepublish": "react-scripts-ts build && tsc -p tsconfig.extension.json",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"start": "react-scripts-ts start",
		"build": "react-scripts-ts build && tsc -p tsconfig.extension.json",
		"test": "react-scripts-ts test --env=jsdom",
		"eject": "react-scripts-ts eject",
		"generate-format": "./generate-format.sh"
	},
	"dependencies": {
		"@types/platform": "^1.3.2",
		"ansi-colors": "^4.1.1",
		"bootstrap": "^4.3.1",
		"dependency-tree": "^7.0.2",
		"http-status-codes": "^1.3.2",
		"lodash": "^4.17.15",
		"platform": "^1.3.5",
		"react": "^16.11.0",
		"react-bootstrap": "^1.0.0-beta.14",
		"react-dom": "^16.11.0",
		"react-icons": "^3.7.0",
		"react-loader-spinner": "^3.1.2",
		"react-scripts-ts": "2.16.0",
		"request": "^2.88.0",
		"vscode": "^1.1.17"
	},
	"devDependencies": {
		"@types/bootstrap": "^4.3.1",
		"@types/dependency-tree": "^6.1.0",
		"@types/jest": "^22.2.3",
		"@types/lodash": "^4.14.136",
		"@types/node": "^10.1.2",
		"@types/react": "^16.9.11",
		"@types/react-dom": "^16.9.3",
		"@types/request": "^2.48.2",
		"mustache": "^3.1.0",
		"typescript": "^3.6.3"
	}
}
